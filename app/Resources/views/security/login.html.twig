{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_check_route') }}" method="post">

        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />
        <br>
        {# Si pones el login correcto entra sin aceptar condiciones #}
        <label for="condiciones">Acepta las condiciones:</label>
        <input type="checkbox" id="condiciones" name="_condiciones" />
        <br>

        <button type="submit">Entrar</button>
    </form>

{% endblock %}